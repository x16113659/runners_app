<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Price</th>
      <th>Colour</th>
      <th>Size</th>
      <th>Discount</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Popularity</th>
      <th>Stock</th>
      <th>Hold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.category_id %></td>
        <td><%= item.name %></td>
        <td><%= item.manufacturer %></td>
        <td><%= item.price %></td>
        <td><%= item.colour %></td>
        <td><%= item.size %></td>
        <td><%= item.discount %></td>
        <td><%= item.description %></td>
        <td><%= item.picture %></td>
        <td><%= item.popularity %></td>
        <td><%= item.stock %></td>
        <td><%= item.hold %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
