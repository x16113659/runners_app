<% if current_user.try(:admin?) %>

  <p id="notice"><%= notice %></p>
  
  <h1>Categories</h1>
  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Gender</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.gender %></td>
          <td><%= link_to 'Show', category, :class => "btn btn-danger", :role => "button" %></td>
          <td><%= link_to 'Edit', edit_category_path(category), :class => "btn btn-danger", :role => "button" %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :role => "button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Category', new_category_path, :class => "btn btn-danger", :role => "button" %>

<% end %>